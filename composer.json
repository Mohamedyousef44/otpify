{
    "name": "yossivic/otp",
    "description": "A simple package for generating and validating OTP (One Time Password) for Laravel",
    "keywords": [
        "laravel",
        "otp",
        "authentication",
        "security"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed Youssef",
            "email": "13mohamed.yossef@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Yossivic\\Otp\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Yossivic\\Otp\\OtpServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}